{% extends 'RentMovieBundle:Default:layout.html.twig'%}

{% block info %}
	<p><b>Genres:</b></p>
	<p><b>Starring:</b></p><br/>
	<p><b>Year:</b></p>
	<p><b>Description:</b></p><br/><br/>
	<p><b>Language:</b></p> 
	<p><b>Price:</b></p> <br/><br/>
	<p><b>Trailer:</b></p><br/>
{% endblock %}
{% block cover %}
	<img src="{{ asset('bundles/rentmovie/images/remember.jpg') }}"><br/>
{% endblock %}
{% block title %}
	<h4 class="film">Remember Me</h4>
{% endblock %}
{% block genres %}
	<p>Drama, Romance<br/></p>
{% endblock %}
{% block starring %}
	<p>Robert Pattinson, Emilie de Ravin, Caitlyn Rund<br/></p>
{% endblock %}
{% block year %}
	<p>2010<br/></p>
{% endblock %}
{% block description %}
	<p>A romantic drama centered on two new lovers: Tyler, whose parents have split in the wake of his brothers suicide, and Ally, who lives each day to the fullest since witnessing her mothers murder<br/></p>
{% endblock %}
{% block language %}
	<p>English<br/></p>
{% endblock %}
{% block price %}
	<p>$7.99</p>
{% endblock %}
{% block trailer %}
	<video width="450" controls>
		<source src="{{ asset('bundles/rentmovie/video/remember.mp4') }}" type="video/mp4">
	</video>
{% endblock %}