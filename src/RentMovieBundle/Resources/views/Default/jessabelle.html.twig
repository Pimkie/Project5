{% extends 'RentMovieBundle:Default:layout.html.twig'%}

{% block info %}
	<p><b>Genres:</b></p>
	<p><b>Starring:</b></p>
	<p><b>Year:</b></p>
	<p><b>Description:</b></p><br/><br/>
	<p><b>Language:</b></p> 
	<p><b>Price:</b></p><br/><br/>
	<p><b>Trailer:</b></p><br/>
{% endblock %}
{% block cover %}
	<img src="{{ asset('bundles/rentmovie/images/jessabelle.jpg') }}"><br/>
{% endblock %}
{% block title %}
	<h4 class="film">Jessabelle</h4>
{% endblock %}
{% block genres %}
	<p>Horror, Thriller<br/></p>
{% endblock %}
{% block starring %}
	<p>Sarah Snook, Mark Webber, Joelle Carter<br/></p>
{% endblock %}
{% block year %}
	<p>2014<br/></p>
{% endblock %}
{% block description %}
	<p>Returning to her childhood home in Louisiana to recuperate from a horrific car accident, Jessabelle comes face to face with a long-tormented spirit that has been seeking her return - and has no intention of letting her escape.
<br/></p>
{% endblock %}
{% block language %}
	<p>English<br/></p>
{% endblock %}
{% block price %}
	<p>$5.99</p>
{% endblock %}
{% block trailer %}
	<video width="450" controls>
		<source src="{{ asset('bundles/rentmovie/video/jessabelle.mp4') }}" type="video/mp4">
	</video>
{% endblock %}