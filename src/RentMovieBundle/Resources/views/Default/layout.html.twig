							<label for="form">Payment form:</label>
							<div class="radio">
								<label>
									<input type="radio" name="optionsRadios" id="radio1" value="option1" checked>
									Payment by cash
								</label>
							</div>
							<div class="radio">
								<label>
									<input type="radio" name="optionsRadios" id="radio2" value="option2">
									Payment by credit card
								</label>
						   </div>
							<label for="term">Term:</label>
							<input class="input-small" type="text"  name="term" id="term">
							</br>
							<label for="date">Payment date:</label>
				
							<div class="form-group">
								<input class="input-small" name="date" onBlur="fdate(date)" placeholder="DD">
							</div>
							</br>
							<div class="form-group">
								<input class="input-small" name="month" onBlur="fmonth(month)"  placeholder="MM">
							</div>
							</br>
							<div class="form-group">
