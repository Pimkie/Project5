		<script language="javascript">
		function fdate(x)
		{
			pattern=/^[1-2][0-9]|[0][1-9]|[3][0-1]$/
			if (!x.value.match(pattern))
			alert("Inappropriate date")
		}
		function fmonth(x)
		{
			pattern=/^[0][1-9]|[1][0-2]$/
			if (!x.value.match(pattern))
			alert("Inappropriate month")
		}
		function fyear(x)
		{
			pattern=/^[2][0][1][5]$/
			if (!x.value.match(pattern))
			alert("Inappropriate year. Please, write current one")
		}
		</script>
		<style>
			h4 {color:#FF1493;
			font-size:2em;
			font-variant: small-caps;}
			h5 {color:#FF1493;
				font-size: 125%;
			font-weight: bold;}
			body{
				background-color: #BEBEBE ;
				margin: 25px 5px;}
			.overlay { 
			color:#fff;
			position:absolute;
			z-index:12;
			top:50%;
			left:0;
			width:100%;
			text-align:center;
			}
			a.white {color:#fff;}
			h3 {color:#FF1493;
			background-color: rgba(203, 233, 247, 0.5);;
			}
			form.a {
			display: inline;
			}
			.red .active a,
             .red .active a:hover {
              background-color: #FF1493;
}
		</style>
		<script>
		function pay() {
			document.getElementById("pay").style.display="block";
			document.getElementById("two").style.display="none";
			document.getElementById("nine").style.display="none";}
		function back(){
			document.getElementById("pay").style.display="none";
			document.getElementById("two").style.display="block";
			document.getElementById("nine").style.display="block";
		}
		function gopay() {
			document.getElementById("add").style.display="block";
			document.getElementById("two").style.display="none";
			document.getElementById("nine").style.display="none";}
		function goback(){
			document.getElementById("add").style.display="none";
			document.getElementById("two").style.display="block";
			document.getElementById("nine").style.display="block";
		}
		</script>
