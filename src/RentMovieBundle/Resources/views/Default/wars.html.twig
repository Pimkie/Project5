{% extends 'RentMovieBundle:Default:layout.html.twig'%}

{% block info %}
	<p><b>Genres:</b></p>
	<p><b>Starring:</b></p>
	<p><b>Year:</b></p>
	<p><b>Description:</b></p><br/>
	<p><b>Language:</b></p> 
	<p><b>Price:</b></p> <br/><br/>
	<p><b>Trailer:</b></p><br/>
{% endblock %}
{% block cover %}
	<img src="{{ asset('bundles/rentmovie/images/wars.jpg') }}"><br/>
{% endblock %}
{% block title %}
	<h4 class="film">Bride Wars</h4>
{% endblock %}
{% block genres %}
	<p>Romance<br/></p>
{% endblock %}
{% block starring %}
	<p>Kate Hudson, Anne Hathaway, Candice Bergen<br/></p>
{% endblock %}
{% block year %}
	<p>2009<br/></p>
{% endblock %}
{% block description %}
	<p>Two best friends become rivals when they schedule their respective weddings on the same day.<br/></p>
{% endblock %}
{% block language %}
	<p>English<br/></p>
{% endblock %}
{% block price %}
	<p>$8.99</p>
{% endblock %}
{% block trailer %}
	<video width="450" controls>
		<source src="{{ asset('bundles/rentmovie/video/wars.mp4') }}" type="video/mp4">
	</video>
{% endblock %}